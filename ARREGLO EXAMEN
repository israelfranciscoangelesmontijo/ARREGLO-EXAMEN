
#include <stdio.h>
#include<stdlib.h>
int main(void)
{

	
	float arreglo[13]={3.3, 4.5, 5.0, 3.4, 4.2, 5.3, 3.2, 4.3, 5.2, 7.1, 3.3, 4.8, 5.2};
	int i;
	for (i = 0; i < 13; i++){
	if (arreglo[i]<3.5){
	printf("Imperceptible, sin problema\n",i);
	}
	else if((arreglo[i]>3.5 )&&(arreglo[i]<5.4)){
	printf("Sin problemas, avisar\n",i);}
    else if((arreglo[i]>5.5)&&(arreglo[i]<6)){
		printf("Emitir alerta, desalojar\n",i);
	}
	else if((arreglo[i]>6.1)&&(arreglo[i]<6.9)){
		printf("Emitir alerta,enviar equipos de apoyo\n",i);
	}
	else if((arreglo[i]>7)&&(arreglo[i]<7.9)){
		printf("Emitir alerta,enviar equipos de rescate\n",i);
	}
	else if(arreglo[i]>8){
		printf("Emergencia nacional solicitar apoyo externo\n",i);
	}
	
	
	}
	
	return 0;
}
